@model FIVERR_PROJECT.Models.testimonial

@{
    ViewBag.Title = "comme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<center>
    <div style="background-color:aliceblue; font-family:Cambria;border:2px black outset;width:50%;height:50%">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Write Comments</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">


                    <div class="form-group">
                        @Html.LabelFor(model => model.Testimony, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Testimony, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.Testimony, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.comments, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.comments, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add Comment" class="btn btn-default"  style="background-color:chocolate; font-family:serif"/>
                        </div>
                    </div>
                </div>
            </div>
        }
      </div>
</center>
